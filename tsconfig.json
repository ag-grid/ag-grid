{
  "compilerOptions": {
    "module": "commonjs",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "target": "es5",
    "noImplicitAny": true,
    "outDir": "dist/lib",
    "moduleResolution": "node",
    "lib": [ "dom","es5","scripthost", "es2015.promise" ],
    "suppressImplicitAnyIndexErrors": true
  },
  "include": ["src/ts/**/*"]
}