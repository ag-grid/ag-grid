{
  "name": "ag-grid-vue",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/ag-grid-vue/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:noop",
      "dependsOn": [
        "build:types",
        "build:package",
        "build:umd",
        "build:copy-source"
      ],
      "inputs": [],
      "outputs": [],
      "configurations": {
        "watch": {},
        "production": {}
      }
    },
    "build:copy-source": {
      "dependsOn": ["@ag-grid-community/vue:build"],
      "cache": true,
      "command": "npx gulp copy-from-module-source",
      "options": {
        "cwd": "packages/ag-grid-vue"
      }
    },
    "build:types": {
      "executor": "@nx/js:tsc",
      "dependsOn": ["@ag-grid-community/core:build:types", "build:copy-source"],
      "inputs": [
        "{projectRoot}/package.json",
        "{projectRoot}/src/**/*",
        "{projectRoot}/tsconfig.*.json",
        "tsDeclarations",
        "sharedGlobals",
        "defaultExcludes",
        {
          "externalDependencies": [
            "npm:typescript",
            "npm:esbuild"
          ]
        }
      ],
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "packages/ag-grid-vue/dist/types",
        "main": "packages/ag-grid-vue/src/main.ts",
        "tsConfig": "packages/ag-grid-vue/tsconfig.types.json",
        "compiler": "tsc"
      },
      "configurations": {
        "watch": {
          "tsConfig": "packages/ag-grid-vue/tsconfig.types.watch.json"
        },
        "production": {}
      }
    },
    "build:package": {
      "executor": "@nx/esbuild:esbuild",
      "dependsOn": ["ag-grid-community:build:types", "build:copy-source"],
      "inputs": [
        "{projectRoot}/package.json",
        "{projectRoot}/src/**/*",
        "{projectRoot}/tsconfig.*.json",
        "tsDeclarations",
        "sharedGlobals",
        "defaultExcludes",
        {
          "externalDependencies": [
            "npm:typescript",
            "npm:esbuild"
          ]
        }
      ],
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "packages/ag-grid-vue/dist/package",
        "main": "packages/ag-grid-vue/src/main.ts",
        "tsConfig": "packages/ag-grid-vue/tsconfig.lib.json",
        "esbuildConfig": "esbuild.config.cjs",
        "external": [
          "ag-grid-community",
          "vue",
          "vue-property-decorator",
          "vue-class-component"
        ],
        "platform": "browser",
        "target": "es6",
        "format": [
          "cjs",
          "esm"
        ],
        "sourcemap": true
      },
      "configurations": {
        "watch": {
          "tsConfig": "packages/ag-grid-vue/tsconfig.watch.json"
        },
        "production": {
          "sourcemap": false
        }
      }
    },
    "build:umd": {
      "executor": "nx:run-commands",
      "dependsOn": ["^build"],
      "options": {
        "command": "NODE_OPTIONS=--openssl-legacy-provider npx vue-cli-service build --target lib src/AgGridVue.ts",
        "cwd": "packages/ag-grid-vue"
      },
      "cache": false
    }
  },
  "tags": ["package:community", "package:framework", "package", "community", "framework"]
}
