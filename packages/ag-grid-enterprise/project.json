{
  "name": "ag-grid-enterprise",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/ag-grid-enterprise/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:noop",
      "inputs": [],
      "outputs": [],
      "dependsOn": ["build:types", "build:package", "build:umd", "build:copy-styles"]
    },
    "build:updateWithCoreExports": {
      "dependsOn": ["@ag-grid-community/core:build"],
      "cache": true,
      "command": "node updateMainTsWithCoreExports.js",
      "options": {
        "cwd": "packages/ag-grid-enterprise"
      }
    },
    "build:types": {
      "executor": "@nx/js:tsc",
      "dependsOn": ["^build:types"],
      "inputs": ["tsDefaults"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "packages/ag-grid-enterprise/dist/types",
        "main": "packages/ag-grid-enterprise/src/main.ts",
        "tsConfig": "packages/ag-grid-enterprise/tsconfig.types.json",
        "compiler": "tsc"
      },
      "cache": true,
      "configurations": {
        "watch": {
          "tsConfig": "packages/ag-grid-enterprise/tsconfig.types.watch.json"
        },
        "production": {}
      }
    },
    "build:umd": {
      "executor": "@nx/webpack:webpack",
      "dependsOn": ["^build", "build:updateWithCoreExports"],
      "options": {
        "webpackConfig": "packages/ag-grid-enterprise/webpack.config.js",
        "outputPath":  "overridden in webpack config but required by nx",
        "outputFileName": "overridden in webpack config but required by nx"
      },
      "cache": true
    },
    "build:copy-styles": {
      "dependsOn": [],
      "inputs": [
        "^production",
        "production"
      ],
      "cache": true,
      "command": "rsync -r ../../community-modules/styles/*.*css --delete styles",
      "options": {
        "cwd": "packages/ag-grid-enterprise"
      }
    },
    "build:package": {
      "executor": "@nx/esbuild:esbuild",
      "dependsOn": ["^build", "build:updateWithCoreExports"],
      "inputs": ["tsDefaults"],
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "packages/ag-grid-enterprise/dist/package",
        "main": "packages/ag-grid-enterprise/src/main.ts",
        "tsConfig": "packages/ag-grid-enterprise/tsconfig.lib.json",
        "esbuildConfig": "esbuild.config.cjs",
        "platform": "browser",
        "target": "es6",
        "format": ["cjs", "esm"],
        "sourcemap": true
      },
      "configurations": {
        "watch": {
          "tsConfig": "packages/ag-grid-enterprise/tsconfig.watch.json"
        },
        "production": {
          "sourcemap": false
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": ["{options.outputFile}"]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "community-modules/jest.config.ts"
      }
    }
  },
  "tags": ["package:enterprise", "package", "enterprise"]
}
