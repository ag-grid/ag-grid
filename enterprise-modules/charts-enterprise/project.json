{
  "name": "@ag-grid-enterprise/charts-enterprise",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "enterprise-modules/charts-enterprise/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "nx:noop",
      "dependsOn": [
        "build:types",
        "build:package",
        "build:umd"
      ]
    },
    "build:types": {
      "executor": "@nx/js:tsc",
      "dependsOn": [
        "^build:types"
      ],
      "inputs": [
        "tsDefaults"
      ],
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "enterprise-modules/charts-enterprise/dist/types",
        "main": "enterprise-modules/charts-enterprise/src/main.ts",
        "tsConfig": "enterprise-modules/charts-enterprise/tsconfig.types.json",
        "compiler": "tsc"
      },
      "configurations": {
        "watch": {
          "tsConfig": "enterprise-modules/charts-enterprise/tsconfig.types.watch.json"
        },
        "production": {}
      }
    },
    "build:package": {
      "executor": "@nx/esbuild:esbuild",
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "tsDefaults"
      ],
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "enterprise-modules/charts-enterprise/dist/package",
        "main": "enterprise-modules/charts-enterprise/src/main.ts",
        "tsConfig": "enterprise-modules/charts-enterprise/tsconfig.lib.json",
        "esbuildConfig": "esbuild.config.cjs",
        "external": ["@ag-grid-community/core", "@ag-grid-enterprise/core", "@ag-grid-enterprise/charts"],
        "platform": "browser",
        "target": "es6",
        "format": [
          "cjs",
          "esm"
        ],
        "sourcemap": true
      },
      "configurations": {
        "watch": {
          "tsConfig": "enterprise-modules/charts-enterprise/tsconfig.watch.json"
        },
        "production": {
          "sourcemap": false
        }
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "outputs": [
        "{options.outputFile}"
      ]
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "enterprise-modules/jest.config.ts"
      }
    }
  },
  "tags": []
}
