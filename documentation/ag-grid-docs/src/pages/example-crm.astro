---
import ShowcaseLayout from '@components/showcase/ShowcaseLayout.astro';
import HRManagementExample from '@components/showcase/examples/hr-management/index.astro';
import styles from "./example.module.scss"
import { Icon } from '@ag-website-shared/components/icon/Icon';
import CRMIcon from '../../public/example/crm.svg?react';
import { urlWithBaseUrl } from '@utils/urlWithBaseUrl';
---

<ShowcaseLayout title="HR Management">
    <div className={styles.topHeader}>
        <div>
            <CRMIcon/>
            <h1 className={styles.headerHeading}>CRM</h1>
            <p className={styles.headerDescription}>An example inventory dashboard that letâ€™s you manage employees</p>
            <button
            class="button-secondary"
        >   <Icon
        alt={`GitHub logo`}
        name="github"
        svgClasses={styles.githubIcon}
    />
            <span>See on Github</span>
    
        </button>
        </div>
    
        <div className={styles.tabs}>
            <a href={urlWithBaseUrl(`/example`)}>
                <img
                className={styles.showcaseItemTab}
                src={urlWithBaseUrl(`/example/grid-illustration.png`)}
                    alt="Grid illustration"
                />
                <div>Inventory</div>
            </a>
            <a href={urlWithBaseUrl(`/example-finance`)}>
                <img
                className={styles.showcaseItemTab}
                src={urlWithBaseUrl(`/example/finance-illustration.png`)}
                    alt="Grid illustration"
                />
                <div>Finance</div>
            </a>
            <a href={urlWithBaseUrl(`/example-crm`)}>
                <img
                className={`${styles.showcaseItemTab} ${styles.tabActive}`}
                src={urlWithBaseUrl(`/example/crm-illustration.png`)}
                    alt="Grid illustration"
                />
                <div>CRM</div>
            </a>
            <a href={urlWithBaseUrl(`/example-complete`)}>
                <img
                    className={styles.showcaseItemTab}
                    src={urlWithBaseUrl(`/example/grid-illustration.png`)}
                    alt="Grid illustration"
                />
                <div>Complete</div>
            </a>
    
        </div>
    </div>
    <div className={styles.layout}>
        <div className={styles.layoutWrapper}>
    <HRManagementExample />
        </div>
    </div>
</ShowcaseLayout>
