---
import Layout from '../layouts/Layout.astro';
import { Icon } from '@components/icon/Icon';
import CommunityMenu from '@components/community-section/CommunityMenu';
import LayoutStyles from '@design-system/modules/CommunityLayout.module.scss';
import styles from '@design-system/modules/CommunityIndex.module.scss';
import Videos from '@components/community-section/news-updates/Videos';
import UpcomingEvents from '@components/community-section/landing-page/UpcomingEvents';
import Showcase from '@components/community-section/Showcase';
import Support from '@components/community-section/landing-page/Support';
import Socials from '@components/community-section/landing-page/Socials';
import ToolsExtensions from '@components/community-section/ToolsExtensions';
---

<Layout title="AG Grid">
    <div class="layout-max-width-large">
        <header class={LayoutStyles.header}>
            <h1>Our Community</h1>
            <CommunityMenu path={Astro.url.pathname} client:only />
            <p class={LayoutStyles.description}>Dedicated to our open-source community. Browse hundreds of open-source projects, find 3rd party tools and extensions, and stay up-to-date with the latest news - all in one place.</p>
        </header>
        <div class="layout-max-width-small">
            <div class={LayoutStyles.container}>
                <div class={LayoutStyles.content}>
                    <!-- Events -->
                    <section>
                        <div class={styles.sectionContainer}>
                            <div class={styles.sectionHeader}>
                                <h3 class={styles.sectionTitle}>{new Date().getFullYear()} Events</h3>
                                <!-- <p class={styles.sectionDescription}>
                                    The latest content from the AG Grid team, including releases, new features, events,
                                    and more
                                </p> -->
                            </div>
                            <a href="/community/events" class={styles.sectionLink}>
                                <span class={styles.linkIcon}>View all</span>
                                <Icon name="arrowRight" />
                            </a>
                        </div>
                        <UpcomingEvents enableFilters={false} client:only />
                    </section>
                    <!-- Showcase -->
                    <section>
                        <div class={styles.sectionContainer}>
                            <div class={styles.sectionHeader}>
                                <h2 class={styles.sectionTitle}>Showcase</h2>
                                <!-- <p class={styles.sectionDescription}>A selection of public projects that use AG Grid</p> -->
                            </div>
                            <a href="/community/showcase" class={styles.sectionLink}>
                                <span class={styles.linkIcon}>View all</span>
                                <Icon name="arrowRight" />
                            </a>
                        </div>
                        <Showcase favouritesOnly={true} maxItems={8} client:only />
                    </section>
                    <!-- Tools & Extensons -->
                    <section>
                        <div class={styles.sectionContainer}>
                            <div class={styles.sectionHeader}>
                                <h2 class={styles.sectionTitle}>Tools & Extensions</h2>
                                <!-- <p class={styles.sectionDescription}>
                                    Wrappers, integrations and utilities created by our community to make using AG Grid
                                    even easier (***WIP***)
                                </p> -->
                            </div>
                            <a href="/community/tools-extensions" class={styles.sectionLink}>
                                <span class={styles.linkIcon}>View all</span>
                                <Icon name="arrowRight" />
                            </a>
                        </div>
                        <ToolsExtensions limit={3} client:only />
                    </section>
                    <!-- Media -->
                    <section>
                        <div class={styles.sectionContainer}>
                            <div class={styles.sectionHeader}>
                                <h3 class={styles.sectionTitle}>Media</h3>
                                <!-- <p class={styles.sectionDescription}>
                                    The latest content from the AG Grid team, including releases, new features, events,
                                    and more
                                </p> -->
                            </div>
                            <a href="/community/news-updates" class={styles.sectionLink}>
                                <span class={styles.linkIcon}>View all</span>
                                <Icon name="arrowRight" />
                            </a>
                        </div>
                        <Videos client:only />
                    </section>
                    <!-- Support -->
                    <section>
                        <h2>Support & Socials</h2>
                        <Support client:only />
                    </section>
                    <hr style={{ margin: '0px 5vw 5vw 5vw' }} />
                    <section>
                        <Socials client:only />
                    </section>
                </div>
            </div>
        </div>
    </div>
</Layout>
