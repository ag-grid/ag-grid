{
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "affected": {
    "defaultBase": "latest"
  },
  "namedInputs": {
    "default": ["{projectRoot}/**/*", "sharedGlobals"],
    "defaultExcludes": [
      "!{projectRoot}/.eslintrc.json",
      "!{projectRoot}/**/?(*.)+(spec|test).[jt]s?(x)?(.snap)",
      "!{projectRoot}/**/test/**",
      "!{projectRoot}/**/__image_snapshots__/**",
      "!{projectRoot}/tsconfig.spec.json",
      "!{projectRoot}/jest.config.[jt]s"
    ],
    "production": ["default", "defaultExcludes"],
    "tsDeclarations": [
      {
        "dependentTasksOutputFiles": "**/*.d.ts"
      }
    ],
    "jsOutputs": [
      {
        "dependentTasksOutputFiles": "**/*.js"
      }
    ],
    "tsDefaults": [
      "{projectRoot}/package.json",
      "{projectRoot}/src/**/*",
      "{projectRoot}/tsconfig.*.json",
      "tsDeclarations",
      "sharedGlobals",
      "defaultExcludes",
      {
        "externalDependencies": ["typescript", "esbuild"]
      }
    ],
    "sharedGlobals": ["{workspaceRoot}/esbuild.config*.cjs", "{workspaceRoot}/tsconfig.*.json"]
  },
  "targetDefaults": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["production", "^production"],
      "cache": true
    },
    "build:styles": {
      "dependsOn": ["^build:styles"],
      "inputs": ["production", "^production"],
      "cache": true
    },
    "build:types": {
      "dependsOn": ["^build:types"],
      "inputs": ["production", "^production"],
      "cache": true
    },
    "build:package": {
      "dependsOn": ["^build:package"],
      "inputs": ["production", "^production"],
      "cache": true
    },
    "build:umd": {
      "dependsOn": ["build:package", "^build:package"],
      "inputs": ["^jsOutputs"],
      "cache": true
    },
    "lint": {
      "inputs": ["default", "{workspaceRoot}/.eslintrc.json", "{workspaceRoot}/.eslintignore"],
      "cache": true
    },
    "test": {
      "inputs": ["default", "^production", "{workspaceRoot}/jest.preset.js"],
      "cache": true
    },
    "e2e": {
      "inputs": ["default", "^production"],
      "cache": true
    },
    "pack": {
      "inputs": [
        "{projectRoot}/dist/**",
        "{projectRoot}/.npmignore",
        "{projectRoot}/README.md",
        "{projectRoot}/LICENSE*",
        "{projectRoot}/package.json"
      ],
      "cache": true
    },
    "@nx/jest:jest": {
      "inputs": ["default", "^production", "{workspaceRoot}/jest.preset.js"],
      "cache": true,
      "options": {
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    },
    "@nx/vite:test": {
      "cache": true,
      "inputs": ["default", "^production"]
    }
  },
  "defaultProject": "all"
}
